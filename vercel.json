{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/connect",
      "dest": "/api/connect.py"
    },
    {
      "src": "/api/connections/(.*)",
      "dest": "/api/connections.py"
    },
    {
      "src": "/api/stats",
      "dest": "/api/stats.py"
    },
    {
      "src": "/admin",
      "dest": "/frontend/admin.html"
    },
    {
      "src": "/connect/(.*)",
      "dest": "/frontend/connect.html"
    },
    {
      "src": "/mobile/(.*)",
      "dest": "/frontend/mobile.html"
    },
    {
      "src": "/",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg))",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.9"
    }
  }
}